#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules/@testdeck/mocha/bin/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules/@testdeck/mocha/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules/@testdeck/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/node_modules:/Users/aronbeal/Code/postman-utils/node_modules:/Users/aronbeal/Code/node_modules:/Users/aronbeal/node_modules:/Users/node_modules:/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/@testdeck/mocha/bin/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/@testdeck/mocha/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/@testdeck/node_modules"
else
  export NODE_PATH="$NODE_PATH:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules/@testdeck/mocha/bin/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules/@testdeck/mocha/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules/@testdeck/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/@testdeck+mocha@0.2.0/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/.pnpm/node_modules:/Users/aronbeal/Code/postman-utils/node_modules:/Users/aronbeal/Code/node_modules:/Users/aronbeal/node_modules:/Users/node_modules:/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/@testdeck/mocha/bin/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/@testdeck/mocha/node_modules:/Users/aronbeal/Code/postman-utils/node_modules/@testdeck/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@testdeck/mocha/bin/watch" "$@"
else
  exec node  "$basedir/../@testdeck/mocha/bin/watch" "$@"
fi
